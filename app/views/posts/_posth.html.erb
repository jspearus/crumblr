<p>
  <h2>
  	<%= link_to post.title, post %>

  	<div class="float-right">
  		<%= form_for(Heart.new) do |f| %>
  		<%= f.hidden_field :post_id, value: post.id %>
  			<%= f.submit "â™¥", class: 'btn btn-danger' %>	
  		<% end %>
  	</div>
  </h2>
</p>

<p>
  <% if post.kind == 'image' %>
  	<%= image_tag post.content, style: "width: 100%" %>
  <% else %>
  	<%= simple_format truncate(post.content, length: 100) %>
  <% end %>
</p>

<p class="text-muted">
	<small>
		<%= post.created_at.to_formatted_s(:long) %>
	</small>

	<small class="float-right">
		<%= post.hearts.count %> hearts
	</small>
</p>
